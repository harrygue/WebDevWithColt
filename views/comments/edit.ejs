<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= selectedComment._id %>?_method=PUT" method="post">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]"  value="<%= selectedComment.text %>" id="">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" >Create</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Back</a>
        </div>
    </div>
</div>


